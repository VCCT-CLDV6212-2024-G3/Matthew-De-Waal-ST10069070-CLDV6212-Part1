
@{
    ViewData["Title"] = "SignIn";
}

<div align="center">
    <img src="~/images/user-profile.png" height="180" />
    <br />
    <br />
    <h1 style="background-color: white; width: fit-content">Sign In</h1>

    <div style="width: fit-content">
    <table cellpadding="2">
        <tr>
            <th>UserName:</th>
            <td><input id="txtUserName" type="text" value="" style="width: 240px" /></td>
        </tr>
        <tr>
            <th>Password:</th>
            <td><input id="txtPassword" type="password" value="" style="width: 240px" /></td>
        </tr>
    </table>
    <br />

    <button class="button-class button-class-small" onclick="SignIn(txtUserName.value, txtPassword.value)">Sign In</button>
    <br />
    <button class="button-class button-class-small" onclick="RedirectToHomePage()">Cancel</button>
    </div>
</div>